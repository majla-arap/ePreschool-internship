@using ePreschool.Web.ViewModels.Preschools
@{
    this.Title(Translations.ePreschool);
    this.MenuItem(MenuItem.Preschools);
}
@model PreschoolsAddViewModel
@inject IDropdown _dropdown;

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger fade show" role="alert" asp-validation-summary="All"></div>
}
<flash-messages></flash-messages>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <input id="preschoolId" type="hidden" asp-for="Preschool.Id" />
    <input type="hidden" asp-for="Preschool.Logo" />
    <input type="hidden" asp-for="Preschool.LogoThumbnail" />



    <div class="d-flex flex-column flex-xl-row">

        <div class="flex-column flex-lg-row-auto w-100 w-xl-350px mb-10">
            <!--begin::Card-->
            <div class="card mb-5 mb-xl-8">
                <!--begin::Card body-->
                <div class="card-body pt-15">
                    <!--begin::Summary-->
                    <div class="d-flex flex-center flex-column mb-5">
                        <!--begin::Avatar-->
                        <div class="symbol symbol-150px symbol-circle mb-7">
                            <img src='@(Model.Preschool.Logo ??"img/undraw_profile.svg")' alt="image">
                        </div>
                        <!--end::Avatar-->
                        <!--begin::Name-->
                        <a href="#" class="fs-3 text-gray-800 text-hover-primary fw-bolder mb-1">@Model.Preschool.Name </a>
                        <!--end::Name-->
                        <!--begin::Email-->
                        <a href="#" class="fs-5 fw-bold text-muted text-hover-primary mb-6">@Model.Preschool.Email</a>
                        <!--end::Email-->
                    </div>



                    <!--end::Summary-->
                    <!--begin::Details toggle-->
                    <div class="d-flex flex-stack fs-4 py-3">
                        <div class="fw-bolder">@Translations.ProfileDetails</div>
                        <!--begin::Badge-->
                        <div class="badge badge-light-info d-inline">@ePreschool.Core.Enumerations.Role.PreschoolManagement</div>
                        <!--begin::Badge-->
                    </div>

                    <div class="separator separator-dashed my-3"></div>
                    <!--begin::Details content-->
                    <div class="pb-5 fs-6">
                        <!--begin::Details item-->
                        <div class="fw-bolder mt-5">@Translations.Email</div>
                        <div class="text-gray-600"><a href="#" class="text-gray-600 text-hover-primary">@Model.Preschool.Email</a></div>
                        <!--begin::Details item-->
                        <!--begin::Details item-->
                        <div class="fw-bolder mt-5">@Translations.PhoneNumber</div>
                        <div class="text-gray-600">@Model.Preschool.PhoneNumber</div>


                        <!--begin::Details item-->
                        <!--begin::Details item-->
                        <!--begin::Details item-->
                        <!--begin::Details item-->
                        <!--begin::Details item-->
                        <!--begin::Details item-->
                    </div>
                    <!--end::Details content-->
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
        </div>
     


    <div class="flex-lg-row-fluid ms-lg-15">
        <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">

            <!--begin:::Tabs-->
            <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x border-0 fs-4 fw-bold mb-n2">
                <!--begin:::Tab item-->
                <li class="nav-item">
                    <a class="nav-link text-active-primary pb-4 active" data-bs-toggle="tab" href="#kt_general">@Translations.General</a>
                </li>
            </ul>
            <!--begin::Tab content-->
            <div class="tab-content">
                <!--begin::Tab pane-->
                <div class="tab-pane fade show active" id="kt_general" role="tab-panel">
                    <div class="d-flex flex-column gap-7 gap-lg-10">
                        <!--begin::General options-->
                        <div class="card card-flush py-4">
                            <!--begin::Card header-->
                            <!--end::Card header-->
                            <!--begin::Card body-->
                            <div class="card-body pt-0">

                                <div class="row mb-5 mt-5">
                                    <!--begin::Col-->
                                    <div class="col-xl-3">
                                        <div class="fs-6 fw-bold mt-2 mb-3"><span class="required">@Translations.Logo</span></div>
                                    </div>
                                    <!--end::Col-->
                                    <!--begin::Col-->
                                    <div class="col-lg-8">
                                        <!--begin::Image input-->
                                        <div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url('@(Model?.Preschool.Logo)??img/undraw_profile.svg')">
                                            <!--begin::Preview existing avatar-->
                                            <div class="image-input-wrapper w-200px h-200px bgi-position-center" style="background-size: 75%; background-image: url('@(Model?.Preschool.Logo)??/img/undraw_profile.svg')"></div>
                                            <!--end::Preview existing avatar-->
                                            <!--begin::Label-->
                                            <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-white shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="" data-bs-original-title="@Translations.ChangePicture">
                                                <i class="bi bi-pencil-fill fs-7"></i>
                                                <!--begin::Inputs-->
                                                <input type="file" asp-for="File" accept=".png, .jpg, .jpeg" />
                                                <input type="hidden" name="avatar_remove">
                                                <!--end::Inputs-->
                                            </label>
                                            <!--end::Label-->
                                            <!--begin::Cancel-->
                                            <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-white shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="" data-bs-original-title="@Translations.Cancel">
                                                <i class="bi bi-x fs-2"></i>
                                            </span>
                                            <!--end::Cancel-->
                                            <!--begin::Remove-->
                                            <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-white shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="" data-bs-original-title="@Translations.Remove">
                                                <i class="bi bi-x fs-2"></i>
                                            </span>
                                            <!--end::Remove-->
                                        </div>
                                        <!--end::Image input-->
                                        <!--begin::Hint-->
                                        <div class="form-text">@Translations.AllowedFileTypes @Translations.PNGJPGJPEG</div>
                                        <!--end::Hint-->
                                    </div>
                                    <!--end::Col-->
                                </div>


                                <div class="row mb-8">
                                    <!--begin::Col-->
                                    <div class="col-xl-3">
                                        <div class="fs-6 fw-bold mt-2 mb-3"> <span class="required">@Translations.Name</span></div>
                                    </div>
                                    <!--end::Col-->
                                    <!--begin::Col-->
                                    <div class="col-xl-9 fv-row fv-plugins-icon-container">
                                        <input type="text" asp-for="Preschool.Name" placeholder="@Translations.Name" class="form-control form-control-solid" />
                                        <div class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-8">
                                    <!--begin::Col-->
                                    <div class="col-xl-3">
                                        <div class="fs-6 fw-bold mt-2 mb-3"> <span class="required">@Translations.Email</span></div>
                                    </div>
                                    <!--end::Col-->
                                    <!--begin::Col-->
                                    <div class="col-xl-9 fv-row fv-plugins-icon-container">
                                        <input type="text" asp-for="Preschool.Email" placeholder="@Translations.Email" class="form-control form-control-solid" />
                                        <div class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-8">
                                    <!--begin::Col-->
                                    <div class="col-xl-3">
                                        <div class="fs-6 fw-bold mt-2 mb-3"> <span class="required">@Translations.Address</span></div>
                                    </div>
                                    <!--end::Col-->
                                    <!--begin::Col-->
                                    <div class="col-xl-9 fv-row fv-plugins-icon-container">
                                        <textarea rows="3" type="text" asp-for="Preschool.Address" placeholder="@Translations.Address" class="form-control form-control-solid"></textarea>
                                        <div class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-8">
                                    <!--begin::Col-->
                                    <div class="col-xl-3">
                                        <div class="fs-6 fw-bold mt-2 mb-3"> <span class="required">@Translations.PhoneNumber</span></div>
                                    </div>
                                    <!--end::Col-->
                                    <!--begin::Col-->
                                    <div class="col-xl-9 fv-row fv-plugins-icon-container">
                                        <input type="text" asp-for="Preschool.PhoneNumber" placeholder="@Translations.PhoneNumber" class="form-control form-control-solid" />
                                        <div class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>


                                <div class="d-flex flex-stack">

                                    <!--begin::Label-->

                                    <div class="me-5 fw-bold">

                                        <label class="fs-6">@Translations.PreschoolInVat</label>

                                        <div class="fs-7 text-muted">@Translations.PreschoolInVat</div>

                                    </div>

                                    <!--end::Label-->
                                    <!--begin::Switch-->

                                    <label class="form-check form-switch form-check-custom form-check-solid">

                                        <input asp-for="Preschool.InVatSystem" class="form-check-input" type="checkbox"  />



                                    </label>

                                    <!--end::Switch-->

                                </div>






                            </div>
                        </div>
                    </div>
                </div>
    </div>



                <br />
                <div class="d-flex justify-content-end">
                    <!--begin::Button-->
                    <a asp-action="Index" id="kt_ecommerce_add_product_cancel" class="btn btn-light me-5">@Translations.Cancel</a>
                    <!--end::Button-->
                    <!--begin::Button-->
                    <button type="submit" id="kt_ecommerce_add_product_submit" class="btn btn-primary">@Translations.Submit</button>
                    <!--end::Button-->
                </div>
            </div>
        </div>


</form>

