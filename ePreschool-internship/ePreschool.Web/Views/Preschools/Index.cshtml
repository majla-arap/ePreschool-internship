@using ePreschool.Web.ViewModels.Preschools
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@inject IDropdown _dropdown
@model PreschoolsIndexViewModel

<div class="card">
    <!--begin::Card header-->
    <div class="card-header card-header-stretch border-bottom border-gray-200">
        <!--begin::Title-->
        <div class="card-title">
            <h3 class="fw-bolder m-0"> @Translations.ePreschool</h3>
        </div>
        <div class="d-flex flex-wrap my-auto">

            <a class="btn btn-link me-5" asp-action="Add" asp-controller="Preschools">@Translations.Add</a>
        </div>
    </div>
    <!--end::Card header-->
    <!--begin::Tab Content-->
    <div class="tab-content">
        <form id="formFilter" asp-action="Index" asp-controller="Preschools" method="get">
            <!--begin::Card-->
            <div class="card mb-7">
                <!--begin::Card body-->
                <div class="card-body">
                    <!--begin::Compact form-->
                    <div class="d-flex align-items-center">


                        <!--begin::Input group-->

                        <div class="col-md-5">
                            <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                            <span class="svg-icon svg-icon-3 svg-icon-gray-500 position-absolute top-50 translate-middle ms-6">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="black" />
                                    <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="black" />
                                </svg>
                            </span>
                            <!--end::Svg Icon-->
                            <input id="serchFilter" type="text" class="form-control form-control-solid ps-10" name="searchValue" value="@Model.searchFilter" />
                        </div>
                        <!--end::Input group-->
                        <!--begin:Action-->
                        <div class="d-flex align-items-center col-md-2">
                            <button type="submit" class="btn btn-secondary me-5">@Translations.Search</button>
                        </div>
                        <!--end:Action-->
                    
                    </div>
                    <!--end::Compact form-->
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
        </form>

        <!--begin::Tab panel-->
        <div id="kt_billing_months" class="card-body p-0 tab-pane fade show active">
            <!--begin::Table container-->
            <div class="table-responsive">
                <!--begin::Table-->
                <table class="table table-row-bordered align-middle gy-4 gs-9">
                    <thead class="border-bottom border-gray-200 fs-6 text-gray-600 fw-bolder bg-light bg-opacity-75">
                        <tr>
                            <td class="min-w-2000px">@Translations.Name</td>
                            <td class="min-w-200px">@Translations.Address</td>
                            <td class="min-w-50px">@Translations.WebPage</td>
                            <td class="min-w-50px">@Translations.PhoneNumber</td>

                            <td class="min-w-150px"></td>
                        </tr>
                    </thead>
                    <tbody class="fw-bold text-gray-600">

                        @foreach (var preschool in Model.Preschools)
                        {
                            <tr>
                                <td>@preschool.Name</td>
                                <td>@preschool.Address</td>
                                <td>@preschool.WebPage</td>
                                <td>@preschool.PhoneNumber</td>
                               

                                <td class="text-end">
                                    <a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                        @Translations.Actions
                                        <!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
                                    <span class="svg-icon svg-icon-5 m-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="black" />
                                            </svg>
                                        </span>

                                        <!--end::Svg Icon-->
                                </a>
                                    <!--begin::Menu-->

                                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true">
                                        <!--begin::Menu item-->
                                    <div class="menu-item px-3">
                                            <a href="@Url.Action("Edit",new {id = @preschool.Id})" class="menu-link px-3">@Translations.Edit</a>
                                        </div>
                                        <!--end::Menu item-->
                                        <!--begin::Menu item-->
                                    <div class="menu-item px-3">
                                            <a onclick="deletePreschool(@preschool.Id);" class="menu-link px-3">@Translations.Delete</a>
                                        </div>
                                        <!--end::Menu item-->

                                </div>
                                    <!--end::Menu-->
                            </td>

                            </tr>
                        }
                        <!--end::Table row-->
                    </tbody>
                </table>
                <!--end::Table-->
            </div>
            <!--end::Table container-->
        </div>
        <!--end::Tab Content-->
    </div>
</div>

@section Scripts{
<script>   

      function deletePreschool(id){
         $.post({
            url: "@Url.Action("Delete", "Preschools")",
            data: {
                id: id,
            },
            success: () => {
                location.reload(true);
            }
         });
      }
</script>
}