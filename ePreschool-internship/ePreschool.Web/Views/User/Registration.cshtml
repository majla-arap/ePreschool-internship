		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
		<!--end::Fonts-->
		<!--begin::Global Stylesheets Bundle(used by all pages)-->
		<link href="assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
		<link href="assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
		<!--end::Global Stylesheets Bundle-->
	</head>
	<!--end::Head-->
	<!--begin::Body-->
	<body id="kt_body" class="bg-body">
		<!--begin::Main-->
		<!--begin::Root-->
		<div class="d-flex flex-column flex-root">
			<!--begin::Authentication - Sign-up -->
			<div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url(assets/media/illustrations/dozzy-1/14.png">
				<!--begin::Content-->
				<div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
					<!--begin::Logo-->
					<a class="mb-12">
						<img alt="Logo" src="img/ePreschool_logo_no_bg.png" class="h-100px" />
					</a>
					<!--end::Logo-->
					<!--begin::Wrapper-->
					<div class="w-lg-600px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
						<!--begin::Form-->
						<form class="form w-100" novalidate="novalidate"  asp-controller="User" asp-action="Registration" method="post">
							<!--begin::Heading-->
							<div class="mb-10 text-center">
								<!--begin::Title-->
								<h1 class="text-dark mb-3">@Translations.CreateAccount</h1>
								<!--end::Title-->
								<!--begin::Link-->
								<div class="text-gray-400 fw-bold fs-4">@Translations.AlreadyHaveAccount
								<a href="../../demo8/dist/authentication/layouts/basic/sign-in.html" class="link-primary fw-bolder">@Translations.SignIn</a></div>
								<!--end::Link-->
							</div>
							<!--end::Heading-->
							<!--begin::Input group-->
							<div class="row fv-row mb-7">
								<!--begin::Col-->
								<div class="col-xl-6">
									<label class="form-label fw-bolder text-dark fs-6">@Translations.FirstName</label>
									<input asp-for="FirstName" class="form-control form-control-lg form-control-solid" type="text" placeholder="" autocomplete="off" />
								</div>
								<!--end::Col-->
								<!--begin::Col-->
								<div class="col-xl-6">
									<label class="form-label fw-bolder text-dark fs-6">@Translations.LastName</label>
									<input asp-for="LastName" class="form-control form-control-lg form-control-solid" type="text" placeholder=""  autocomplete="off" />
								</div>
								<!--end::Col-->
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.Email</label>
								<input asp-for="Email" class="form-control form-control-lg form-control-solid" type="email" placeholder=""  autocomplete="off" />
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.Username</label>
								<input asp-for="UsernName" class="form-control form-control-lg form-control-solid" type="text" placeholder="" autocomplete="off" />
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.DateOfBirth</label>
								<input asp-for="DateOfBirth" class="form-control form-control-lg form-control-solid" type="date" placeholder="" autocomplete="off" />
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.Gender</label>
								<select asp-for="Gender" class="form-select form-select-solid form-select-lg fw-bolder select2-hidden-accessible" data-control="select2" data-placeholder="Select an option">
                                                 <option value="0">@Translations.NotDefined</option>
                                                 <option value="1">@Translations.Female</option>
                                                 <option value="2">@Translations.Male</option>
                               </select>
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.Adress</label>
								<input asp-for="Address" class="form-control form-control-lg form-control-solid" type="text" placeholder="" autocomplete="off" />
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.City</label>
								<select asp-for="CityId" asp-items="@(await dropdown.Cities(true))" id="CitiesList"  data-control="select2" class="form-select form-select-solid form-select-lg fw-bolder select2-hidden-accessible" 
                                            data-select2-id="select2-data-9-umw9">
                                     </select>
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.BusinessUnit</label>
								<select asp-for="CurrentBusinessUnitId" asp-items="@(await dropdown.BusinessUnits(true))" id="CitiesList"  data-control="select2" class="form-select form-select-solid form-select-lg fw-bolder select2-hidden-accessible" 
                                            data-select2-id="select2-data-9-umw9">
                                     </select>
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row mb-7">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.Preschool</label>
								<select asp-for="PreschoolId" asp-items="@(await dropdown.Preschools(true))" id="CitiesList"  data-control="select2" class="form-select form-select-solid form-select-lg fw-bolder select2-hidden-accessible" 
                                            data-select2-id="select2-data-9-umw9">
                                     </select>
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="mb-10 fv-row" data-kt-password-meter="true">
								<!--begin::Wrapper-->
								<div class="mb-1">
									<!--begin::Label-->
									<label class="form-label fw-bolder text-dark fs-6">@Translations.Password</label>
									<!--end::Label-->
									<!--begin::Input wrapper-->
									<div class="position-relative mb-3">
										<input asp-for="Password" class="form-control form-control-lg form-control-solid" type="password" placeholder="" autocomplete="off" />
										<span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
											<i class="bi bi-eye-slash fs-2"></i>
											<i class="bi bi-eye fs-2 d-none"></i>
										</span>
									</div>
									<!--end::Input wrapper-->
									<!--begin::Meter-->
									<div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
										<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
									</div>
									<!--end::Meter-->
								</div>
								<!--end::Wrapper-->
								<!--begin::Hint-->
								<div class="text-muted">Use 6 or more characters with a mix of letters, numbers &amp; symbols.</div>
								<!--end::Hint-->
							</div>
							<!--end::Input group=-->
							<!--begin::Input group-->
							<div class="fv-row mb-5">
								<label class="form-label fw-bolder text-dark fs-6">@Translations.ConfirmPassword</label>
								<input asp-for="PasswordConfirm" class="form-control form-control-lg form-control-solid" type="password" placeholder="" autocomplete="off" />
							</div>
							<!--end::Input group-->
							<!--begin::Actions-->
							<div class="text-center">
								<button type="submit" id="kt_sign_up_submit" class="btn btn-lg btn-primary">
									<span class="indicator-label">@Translations.Save</span>
								</button>
							</div>
							<!--end::Actions-->
						</form>
						<!--end::Form-->
					</div>
					<!--end::Wrapper-->
				</div>
				<!--end::Content-->
				<!--begin::Footer-->
				<div class="d-flex flex-center flex-column-auto p-10">
					<!--begin::Links-->
					<div class="d-flex align-items-center fw-bold fs-6">
						<a href="https://breakpoint.ba" class="text-muted text-hover-primary px-2">@Translations.About</a>
						<a href="mailto:info@breakpoint.ba" class="text-muted text-hover-primary px-2">@Translations.Contact</a>
					</div>
					<!--end::Links-->
				</div>
				<!--end::Footer-->
			</div>
			<!--end::Authentication - Sign-up-->
		</div>
		<!--end::Root-->
		<!--end::Main-->
		<!--begin::Javascript-->
		<script>var hostUrl = "assets/";</script>
		<!--begin::Global Javascript Bundle(used by all pages)-->
		<script src="assets/plugins/global/plugins.bundle.js"></script>
		<script src="assets/js/scripts.bundle.js"></script>
		<!--end::Global Javascript Bundle-->
		<!--begin::Page Custom Javascript(used by this page)-->
		<script src="assets/js/custom/authentication/sign-up/general.js"></script>
		<!--end::Page Custom Javascript-->
		<!--end::Javascript-->
	</body>
	<!--end::Body-->
</html>
